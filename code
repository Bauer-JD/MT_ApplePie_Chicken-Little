// constants won't change. They're used here to set pin numbers:
const int servo1 = 2; 
const int led2 = 4; 
const int servo3 = 7;  
const int servo4 = 8;  

// variables will change:
int buttonState = 0;  // variable for reading the pushbutton status

void setup() {
  // initialize the LED pin as an output:
  pinMode(ledPin, OUTPUT);
  // initialize the pushbutton pin as an input:
  pinMode(servo1, INPUT);
  pinMode(led2, INPUT);
  pinMode(servo3, INPUT);
  pinMode(servo4, INPUT);
}

void loop() {
  interaction1 = digitalRead(servo1);
  interaction2 = digitalRead(led2);
  interaction3 = digitalRead(servo3);
  interaction4 = digitalRead(servo4);

  // Interaction 1 : SERVO - the villagers turn angry; completing a circuit (Button) 
    if (interaction1 == HIGH) {
    // turn LED on:
    digitalWrite(ledPin, HIGH);
  } else {
    // turn LED off:
    digitalWrite(ledPin, LOW);
  }
  // Interaction 2 : LED - ship piece glows; completing a circuit (Button)
    if (interaction2 == HIGH) {
    // turn LED on:
    digitalWrite(ledPin, HIGH);
  } else {
    // turn LED off:
    digitalWrite(ledPin, LOW);
  }
  // Interaction 3 : SERVO - reveal that aliens are friendly; completing a circuit (Button)
    if (interaction3 == HIGH) {
    // turn LED on:
    digitalWrite(ledPin, HIGH);
  } else {
    // turn LED off:
    digitalWrite(ledPin, LOW);
  }
  // Interaction 4 : SERVO - villagers turn happy; completing a circuit(Button) 
    if (interaction4 == HIGH) {
    // turn LED on:
    digitalWrite(ledPin, HIGH);
  } else {
    // turn LED off:
    digitalWrite(ledPin, LOW);
  }


}
